---
import '../styles/global.css';

interface Props {
  title?: string;
}

const { title = 'Woord van de Dag' } = Astro.props;
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Elke dag een nieuw Nederlands woord om je woordenschat te verrijken." />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body>
    <header class="site-header">
      <nav>
        <a href="/" class="site-title">Woord van de Dag</a>
        <a href="/archive" class="nav-link">Archief</a>
      </nav>
    </header>
    <main>
      <slot />
    </main>
    <footer class="site-footer">
      <p>Woord van de Dag &mdash; Elke dag een nieuw Nederlands woord</p>
    </footer>
  </body>
</html>
